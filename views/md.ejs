<%- include('./header', { subtitle: path.substr( 1, path.length - 4 ) }) %>

<body style="margin-top: 80px;">

<%- include('./navi', { subtitle: path.substr( 1, path.length - 4 ) }) %>

<%
var tmp = path.split( '/' );
tmp.splice( tmp.length - 1, 1 );
var folder = ( tmp.length == 1 ? '/' : tmp.join( '/' ) );
if( !path.endsWith( '/' ) && !folder.endsWith( '/' ) ){
  folder += '/';
}
%>

<div class="container" id="main_div" style="padding-bottom: 80px; position: relative; top: 20px;">
  <div class="row">
    <div class="col-12 col-lg-3">
      <%- include('./files', { folder: folder, path: path } ) %>
    </div>
    <div class="col-12 col-lg-9">
<% if( github_file_url ){ %>
      <div style="text-align: right;">
        <a target="_blank" class="btn btn-xs btn-secondary" href="<%= github_file_url %>"><i class="fab fa-github"></i></a>
      </div>
<% } %>
      <%- html %>
    </div>
  </div>
</div>

<%- include('./footer', {}) %>
